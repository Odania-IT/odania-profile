<form class="form-horizontal" role="form">
	<div class="row-fluid">
		<div class="col-md-9">
			<h1>Editing Site {{ site.name }}</h1>

			<uib-tabset>
				<uib-tab heading="General"><%= render partial: '/protected/template/templates/odania_profile/profile/tab_general' %></uib-tab>
				<uib-tab heading="Description"><%= render partial: '/protected/template/templates/odania_profile/profile/tab_description' %></uib-tab>
				<uib-tab heading="Social"><%= render partial: '/protected/template/templates/odania_profile/profile/tab_social' %></uib-tab>
				<uib-tab heading="Skills"><%= render partial: '/protected/template/templates/odania_profile/profile/tab_skills' %></uib-tab>
			</uib-tabset>
		</div>
		<div class="col-md-3">
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button data-ng-click="saveProfile()" class="btn btn-primary"><%= t('general.save') %></button>

					<span data-ng-if="errors" style="color: red;"><%= t('general.Please correct the errors') %></span>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Published</label>

				<div class="col-sm-10">
					<input type="checkbox" data-ng-model="profile.published">
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Timeline</label>

				<div class="col-sm-10">
					<div class="form-control">
						<select data-ng-model="profile.timeline_id" data-ng-options="timeline.id as timeline.title for timeline in data.timelines">
							<option value="">-</option>
						</select>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
